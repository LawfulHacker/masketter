{
  "compileOnSave": false,
  "compilerOptions": {
    "declaration": false,
    "jsx": "react",
    "module": "commonjs",
    "noImplicitAny": true,
    "preserveConstEnums": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "sourceMap": true,
    "target": "es5"
  },
  "exclude": [
    "node_modules"
  ],
  "lib": [
    "es2015",
    "dom",
    "dom.iterable"
  ]
}
