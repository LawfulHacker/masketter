# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
# Most files on project use tabs instead of spaces
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
indent_style = space
indent_size = 4

[{.jscsrc,.jshintrc,package.json,tsconfig.json}]
indent_style = space
indent_size = 2

[{**.js,**.ts}]
indent_style = space
indent_size = 2
